<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="sch.id.aqilah4.elearning">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".BaseApps"
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/aqilah4"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning">

        <activity android:name=".core.SplashScreenActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".core.quiz.QuizV2Activity" />

        <activity
            android:name=".core.authentication.AuthActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        </activity>

        <activity
            android:name=".core.dashboard.DashboardActivity"
            android:theme="@style/AppTheme.Dashboard" />

        <activity
            android:name=".core.category.CategoryActivity"
            android:label="@string/title_activity_category"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name=".core.examination.ExaminationActivity" />

        <activity android:name=".core.quiz.QuizActivity" />

        <activity android:name=".core.report.ReportActivity" />

    </application>

</manifest>